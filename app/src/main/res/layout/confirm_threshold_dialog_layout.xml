<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >


<LinearLayout
android:id="@+id/frameContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="@dimen/fab_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/message"
            android:textSize="12sp"
            android:layout_below="@+id/productName" />

        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/productName"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/message"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/fab_margin"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Shop Name"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/message"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/fab_margin"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:padding="1dip" >
        <ImageButton

            android:id="@+id/scan_btn"
            android:background="@color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:padding="8dp"
            android:layout_marginRight="6dip"
            android:contentDescription="TODO"
            android:src="@drawable/ic_fab_qr"/>

        <!--<android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_above="@id/history_date"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/scan_btn"
            > </android.support.design.widget.TextInputLayout>-->

        <android.support.v7.widget.AppCompatAutoCompleteTextView
            android:layout_width="fill_parent"
            android:padding="5dp"
            android:layout_height="60dp"
            android:layout_above="@id/history_date"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/scan_btn"

            android:id="@+id/product_name"


            android:hint="Product Name"
            android:inputType="text"

            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:gravity="center_vertical"
            android:marqueeRepeatLimit="marquee_forever"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_marginTop="1dp"
            android:id="@+id/history_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/scan_btn"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_weight="1.3"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Product Size"
                android:textSize="12sp" />
            <Spinner
                android:layout_weight="0.7"
                android:id="@+id/product_size"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:hint="750 ml"
                />

        </LinearLayout>
    </RelativeLayout>
    <EditText
        android:id="@+id/threshold_price"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:hint="Price pre Unity"
        android:singleLine="true"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/message"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/threshold_quantity"
        android:inputType="date"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:hint="Threshold Quantity"
        android:singleLine="true"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/message"
        android:textSize="16sp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <Button
            android:layout_weight="1"
            android:id="@+id/btncancel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_bg_red"
            android:elevation="6dp"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:text="Cancel"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
        <Button
            android:layout_weight="1"
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_bg_blue"
            android:elevation="6dp"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:text="Confirm"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>

    <ProgressBar
        android:visibility="gone"
        android:progressBackgroundTint="@android:color/transparent"
        android:id="@+id/progress_me"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/frameContainer"
        android:layout_alignEnd="@id/frameContainer"
        android:layout_alignLeft="@+id/frameContainer"
        android:layout_alignRight="@id/frameContainer"
        android:layout_alignStart="@+id/frameContainer"
        android:layout_marginBottom="0dp" />
</RelativeLayout>